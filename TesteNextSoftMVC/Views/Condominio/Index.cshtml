@model IEnumerable<TesteNextSoftMVC.Models.Condominio>

@{
    ViewData["Title"] = "Index";
}

<h1>Condomínios</h1>

<p>
    <a asp-action="Create">Criar novo Condomínio</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bairro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaTotalCondominio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorIPTU)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaTotalCondominio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorIPTU)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
